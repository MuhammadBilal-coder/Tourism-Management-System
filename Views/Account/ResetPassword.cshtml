@using System.Text.Encodings.Web
@{
    ViewData["Title"] = "Reset Password";

    var errorMsg = ViewBag.Error as string;
    var errorMsgJs = string.IsNullOrWhiteSpace(errorMsg) ? "" : JavaScriptEncoder.Default.Encode(errorMsg);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .reset-container {
            background: white;
            padding: 45px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 480px;
            animation: slideUp 0.5s ease;
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .icon-header { text-align: center; margin-bottom: 20px; }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { box-shadow: 0 0 0 0 rgba(102,126,234,0.7); }
            50% { box-shadow: 0 0 0 20px rgba(102,126,234,0); }
        }

        .icon-circle i { font-size: 40px; color: white; }

        h1 {
            text-align: center;
            color: #1c1e21;
            font-size: 28px;
            margin-bottom: 8px;
            font-weight: 700;
        }

        .subtitle {
            text-align: center;
            color: #606770;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .error-banner {
            background: #fee;
            border: 1px solid #fcc;
            color: #c00;
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
            font-size: 14px;
        }

        .error-banner.show { display: block; }

        .form-group { margin-bottom: 20px; }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }

        .input-container { position: relative; }

        input {
            width: 100%;
            padding: 14px 45px 14px 14px;
            border: 1px solid #dddfe2;
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.2s;
            background: #f5f6f7;
        }

        input:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 2px rgba(102,126,234,0.1);
        }

        input.valid { border-color: #42b72a; background: #f0fff4; }
        input.invalid { border-color: #f02849; background: #fff5f5; }

        .input-icon {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 18px;
            cursor: pointer;
            color: #8a8d91;
            transition: all 0.2s;
        }

        .input-icon:hover { color: #667eea; }

        .helper-text {
            font-size: 12px;
            margin-top: 6px;
            display: none;
            padding-left: 5px;
        }

        .helper-text.show { display: block; }
        .helper-text.success { color: #42b72a; }
        .helper-text.error { color: #f02849; }

        .password-strength {
            height: 4px;
            background: #e4e6eb;
            border-radius: 2px;
            margin-top: 8px;
            overflow: hidden;
            display: none;
        }

        .password-strength.show { display: block; }

        .strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s;
            border-radius: 2px;
        }

        .strength-weak { width: 33%; background: #f02849; }
        .strength-medium { width: 66%; background: #ffa724; }
        .strength-strong { width: 100%; background: #42b72a; }

        .password-tips {
            font-size: 12px;
            color: #65676b;
            margin-top: 8px;
            padding: 10px;
            background: #f0f2f5;
            border-radius: 8px;
            display: none;
        }

        .password-tips.show { display: block; }

        .tip-item { margin: 4px 0; display: flex; align-items: center; gap: 6px; }
        .tip-item i { font-size: 12px; color: #8a8d91; }
        .tip-item.met { color: #42b72a; }
        .tip-item.met i { color: #42b72a; }

        .btn-reset {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 15px;
        }

        .btn-reset:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102,126,234,0.4);
        }

        .btn-reset:disabled {
            background: #e4e6eb;
            color: #bcc0c4;
            cursor: not-allowed;
        }

        .back-link { text-align: center; margin-top: 20px; }

        .back-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
        }

        .back-link a:hover { text-decoration: underline; }
    </style>
</head>

<body>
    <div class="reset-container">
        <div class="icon-header">
            <div class="icon-circle">
                <i class="fas fa-key"></i>
            </div>
        </div>

        <h1>Reset Password</h1>
        <p class="subtitle">Create a new strong password for your account</p>

        <div class="error-banner" id="errorBanner"></div>

        <form method="post" asp-action="ResetPassword" id="resetForm">
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <div class="input-container">
                    <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password" autocomplete="new-password" />
                    <span class="input-icon" onclick="togglePassword('newPassword', this)">
                        <i class="far fa-eye"></i>
                    </span>
                </div>

                <div class="password-strength" id="strengthBar">
                    <div class="strength-bar" id="strengthFill"></div>
                </div>

                <div class="password-tips" id="passwordTips">
                    <div class="tip-item" id="tip1"><i class="far fa-circle"></i><span>At least 8 characters</span></div>
                    <div class="tip-item" id="tip2"><i class="far fa-circle"></i><span>Contains a letter</span></div>
                    <div class="tip-item" id="tip3"><i class="far fa-circle"></i><span>Contains a number</span></div>
                </div>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <div class="input-container">
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Re-enter your password" autocomplete="new-password" />
                    <span class="input-icon" onclick="togglePassword('confirmPassword', this)">
                        <i class="far fa-eye"></i>
                    </span>
                </div>
                <div class="helper-text" id="confirmHelper"></div>
            </div>

            <button type="submit" class="btn-reset" id="submitBtn" disabled>
                Reset Password
            </button>
        </form>

        <div class="back-link">
            <a href="/Account/Login"><i class="fas fa-arrow-left"></i> Back to login</a>
        </div>
    </div>

    <script>
        const newPasswordInput = document.getElementById('newPassword');
        const confirmInput = document.getElementById('confirmPassword');
        const submitBtn = document.getElementById('submitBtn');

        let validPassword = false;
        let validConfirm = false;

        newPasswordInput.addEventListener('focus', function () {
            document.getElementById('passwordTips').classList.add('show');
            document.getElementById('strengthBar').classList.add('show');
        });

        newPasswordInput.addEventListener('input', function () {
            const value = this.value;
            const hasLength = value.length >= 8;
            const hasLetter = /[A-Za-z]/.test(value);
            const hasNumber = /\d/.test(value);

            updateTip('tip1', hasLength);
            updateTip('tip2', hasLetter);
            updateTip('tip3', hasNumber);

            const strengthFill = document.getElementById('strengthFill');
            let strength = 0;
            if (hasLength) strength++;
            if (hasLetter) strength++;
            if (hasNumber) strength++;

            strengthFill.className = 'strength-bar';
            if (strength === 1) strengthFill.className += ' strength-weak';
            else if (strength === 2) strengthFill.className += ' strength-medium';
            else if (strength === 3) strengthFill.className += ' strength-strong';

            if (hasLength && hasLetter && hasNumber) {
                this.className = 'valid';
                validPassword = true;
            } else if (value.length > 0) {
                this.className = 'invalid';
                validPassword = false;
            } else {
                this.className = '';
                validPassword = false;
            }

            if (confirmInput.value) confirmInput.dispatchEvent(new Event('input'));
            updateButton();
        });

        confirmInput.addEventListener('input', function () {
            const value = this.value;
            const password = newPasswordInput.value;
            const helper = document.getElementById('confirmHelper');

            if (value.length === 0) {
                this.className = '';
                helper.className = 'helper-text';
                validConfirm = false;
            } else if (value !== password) {
                this.className = 'invalid';
                helper.className = 'helper-text error show';
                helper.textContent = 'Passwords do not match';
                validConfirm = false;
            } else {
                this.className = 'valid';
                helper.className = 'helper-text success show';
                helper.textContent = 'Passwords match!';
                validConfirm = true;
            }
            updateButton();
        });

        function updateTip(id, met) {
            const tip = document.getElementById(id);
            if (met) {
                tip.classList.add('met');
                tip.querySelector('i').className = 'fas fa-check-circle';
            } else {
                tip.classList.remove('met');
                tip.querySelector('i').className = 'far fa-circle';
            }
        }

        function updateButton() {
            submitBtn.disabled = !(validPassword && validConfirm);
        }

        function togglePassword(id, icon) {
            const input = document.getElementById(id);
            const iconElement = icon.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                iconElement.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                iconElement.className = 'far fa-eye';
            }
        }

        // SAFE server error (encoded)
        const serverError = '@errorMsgJs';
        if (serverError) {
            const errorBanner = document.getElementById('errorBanner');
            errorBanner.textContent = serverError; // textContent = safe
            errorBanner.classList.add('show');
        }
    </script>
</body>
</html>
