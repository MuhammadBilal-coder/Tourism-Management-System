@using System.Text.Encodings.Web
@{
    ViewData["Title"] = "Register";
    var errorMsg = ViewBag.Error as string;
    var errorMsgJs = string.IsNullOrWhiteSpace(errorMsg) ? "" : JavaScriptEncoder.Default.Encode(errorMsg);
}

<!DOCTYPE html>
<html>
<head>
    <title>Register</title>

    <!-- ? FIX: removed space in CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .register-container {
            background: white;
            padding: 45px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 480px;
            animation: slideUp 0.5s ease;
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .logo { text-align: center; margin-bottom: 10px; }
        .logo i { font-size: 50px; color: #667eea; }

        h1 {
            text-align: center;
            color: #1c1e21;
            font-size: 32px;
            margin-bottom: 8px;
            font-weight: 700;
        }

        .subtitle {
            text-align: center;
            color: #606770;
            font-size: 15px;
            margin-bottom: 30px;
        }

        .form-group { margin-bottom: 20px; position: relative; }
        .input-container { position: relative; }

        input {
            width: 100%;
            padding: 14px 45px 14px 14px;
            border: 1px solid #dddfe2;
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.2s;
            background: #f5f6f7;
        }

        /* ? FIX: input:focus */
        input:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 2px rgba(102,126,234,0.1);
        }

        input.valid { border-color: #42b72a; background: #f0fff4; }
        input.invalid { border-color: #f02849; background: #fff5f5; }

        .input-icon {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 18px;
            cursor: pointer;
            color: #8a8d91;
            transition: all 0.2s;
        }

        /* ? FIX: removed space in selectors */
        .input-icon.success { color: #42b72a; }
        .input-icon.error { color: #f02849; }

        .helper-text {
            font-size: 12px;
            margin-top: 6px;
            display: none;
            padding-left: 5px;
        }

        .helper-text.show { display: block; }
        .helper-text.success { color: #42b72a; }
        .helper-text.error { color: #f02849; }

        .password-strength {
            height: 4px;
            background: #e4e6eb;
            border-radius: 2px;
            margin-top: 8px;
            overflow: hidden;
            display: none;
        }

        .password-strength.show { display: block; }

        .strength-bar { height: 100%; width: 0%; transition: all 0.3s; border-radius: 2px; }
        .strength-weak { width: 33%; background: #f02849; }
        .strength-medium { width: 66%; background: #ffa724; }
        .strength-strong { width: 100%; background: #42b72a; }

        /* ? FIX: .password-tips */
        .password-tips {
            font-size: 12px;
            color: #65676b;
            margin-top: 8px;
            padding: 10px;
            background: #f0f2f5;
            border-radius: 8px;
            display: none;
        }

        .password-tips.show { display: block; }

        .tip-item { margin: 4px 0; display: flex; align-items: center; gap: 6px; }
        .tip-item i { font-size: 12px; color: #8a8d91; }
        .tip-item.met { color: #42b72a; }
        .tip-item.met i { color: #42b72a; }

        .btn-register {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 15px;
            position: relative;
            overflow: hidden;
        }

        .btn-register:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102,126,234,0.4);
        }

        .btn-register:disabled {
            background: #e4e6eb;
            color: #bcc0c4;
            cursor: not-allowed;
            transform: none;
        }

        /* ? FIX: .spinner selector */
        .btn-register .spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto;
        }

        @@keyframes spin { to { transform: rotate(360deg); } }

        /* ? FIX: .loading selector */
        .btn-register.loading .btn-text { display: none; }
        .btn-register.loading .spinner { display: block; }

        .divider { text-align: center; margin: 25px 0; position: relative; }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            top: 50%;
            height: 1px;
            background: #dadde1;
        }

        /* ? FIX: .divider span */
        .divider span {
            background: white;
            padding: 0 15px;
            color: #8a8d91;
            font-size: 14px;
            position: relative;
        }

        .login-link { text-align: center; }
        .login-link a { color: #667eea; text-decoration: none; font-weight: 600; font-size: 15px; }
        .login-link a:hover { text-decoration: underline; }

        /* SUCCESS MODAL */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            z-index: 1000;
            animation: fadeIn 0.3s;
        }

        @@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

        .modal-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 40px;
            border-radius: 20px;
            text-align: center;
            max-width: 400px;
            width: 90%;
            animation: modalSlide 0.4s ease;
        }

        @@keyframes modalSlide {
            from { opacity: 0; transform: translate(-50%, -40%); }
            to { opacity: 1; transform: translate(-50%, -50%); }
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #42b72a, #34a853);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            animation: scaleIn 0.5s ease;
        }

        @@keyframes scaleIn { from { transform: scale(0); } to { transform: scale(1); } }

        .success-icon i { font-size: 40px; color: white; }

        .modal-content h2 { color: #1c1e21; margin-bottom: 10px; font-size: 26px; }
        .modal-content p { color: #65676b; margin-bottom: 25px; font-size: 15px; }

        .progress-bar {
            width: 100%;
            height: 4px;
            background: #e4e6eb;
            border-radius: 2px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .progress-fill {
            height: 100%;
            width: 0%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            animation: progress 3s ease forwards;
        }

        @@keyframes progress { to { width: 100%; } }

        .error-banner {
            background: #fee;
            border: 1px solid #fcc;
            color: #c00;
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
            font-size: 14px;
        }

        .error-banner.show { display: block; }
    </style>
</head>

<body>
    <div class="register-container">
        <div class="logo">
            <i class="fas fa-mountain-sun"></i>
        </div>
        <h1>Create Account</h1>
        <p class="subtitle">Join us and start your journey!</p>

        <div class="error-banner" id="errorBanner"></div>

        <form method="post" asp-action="Register" id="registerForm">

            <!-- NAME -->
            <div class="form-group">
                <div class="input-container">
                    <input type="text" id="name" name="name" placeholder="Full name" autocomplete="name" />
                    <span class="input-icon" id="nameIcon"></span>
                </div>
                <div class="helper-text" id="nameHelper"></div>
            </div>

            <!-- EMAIL -->
            <div class="form-group">
                <div class="input-container">
                    <input type="email" id="email" name="email" placeholder="Email address" autocomplete="email" />
                    <span class="input-icon" id="emailIcon"></span>
                </div>
                <div class="helper-text" id="emailHelper"></div>
            </div>

            <!-- PASSWORD -->
            <div class="form-group">
                <div class="input-container">
                    <input type="password" id="password" name="password" placeholder="Password" autocomplete="new-password" />
                    <span class="input-icon" id="passwordIcon" onclick="togglePassword('password')">
                        <i class="far fa-eye"></i>
                    </span>
                </div>
                <div class="password-strength" id="strengthBar">
                    <div class="strength-bar" id="strengthFill"></div>
                </div>
                <div class="password-tips" id="passwordTips">
                    <div class="tip-item" id="tip1">
                        <i class="far fa-circle"></i>
                        <span>At least 8 characters</span>
                    </div>
                    <div class="tip-item" id="tip2">
                        <i class="far fa-circle"></i>
                        <span>Contains a letter</span>
                    </div>
                    <div class="tip-item" id="tip3">
                        <i class="far fa-circle"></i>
                        <span>Contains a number</span>
                    </div>
                </div>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="form-group">
                <div class="input-container">
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" autocomplete="new-password" />
                    <span class="input-icon" id="confirmIcon" onclick="togglePassword('confirmPassword')">
                        <i class="far fa-eye"></i>
                    </span>
                </div>
                <div class="helper-text" id="confirmHelper"></div>
            </div>

            <button type="submit" class="btn-register" id="submitBtn" disabled>
                <span class="btn-text">Create Account</span>
                <div class="spinner"></div>
            </button>
        </form>

        <div class="divider">
            <span>Already have an account?</span>
        </div>

        <div class="login-link">
            <a href="/Account/Login">Sign in instead</a>
        </div>
    </div>

    <!-- SUCCESS MODAL -->
    <div class="modal" id="successModal">
        <div class="modal-content">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>
            <h2>Welcome Aboard!</h2>
            <p>Your account has been created successfully. Redirecting you to home page...</p>
            <div class="progress-bar">
                <div class="progress-fill"></div>
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById('registerForm');
        const nameInput = document.getElementById('name');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const confirmInput = document.getElementById('confirmPassword');
        const submitBtn = document.getElementById('submitBtn');

        let validName = false;
        let validEmail = false;
        let validPassword = false;
        let validConfirm = false;

        // NAME VALIDATION
        nameInput.addEventListener('input', function () {
            const value = this.value.trim();
            const icon = document.getElementById('nameIcon');
            const helper = document.getElementById('nameHelper');

            if (value.length === 0) {
                this.className = '';
                icon.innerHTML = '';
                helper.className = 'helper-text';
                validName = false;
            } else if (value.length < 3) {
                this.className = 'invalid';
                icon.innerHTML = '<i class="fas fa-times-circle"></i>';
                icon.className = 'input-icon error';
                helper.className = 'helper-text error show';
                helper.textContent = 'Name must be at least 3 characters';
                validName = false;
            } else {
                this.className = 'valid';
                icon.innerHTML = '<i class="fas fa-check-circle"></i>';
                icon.className = 'input-icon success';
                helper.className = 'helper-text success show';
                helper.textContent = 'Looks good!';
                validName = true;
            }
            updateButton();
        });

        // EMAIL VALIDATION
        emailInput.addEventListener('input', function () {
            const value = this.value.trim();
            const icon = document.getElementById('emailIcon');
            const helper = document.getElementById('emailHelper');
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;


            if (value.length === 0) {
                this.className = '';
                icon.innerHTML = '';
                helper.className = 'helper-text';
                validEmail = false;
            } else if (!emailRegex.test(value)) {
                this.className = 'invalid';
                icon.innerHTML = '<i class="fas fa-times-circle"></i>';
                icon.className = 'input-icon error';
                helper.className = 'helper-text error show';
                helper.textContent = 'Please enter a valid email address';
                validEmail = false;
            } else {
                this.className = 'valid';
                icon.innerHTML = '<i class="fas fa-check-circle"></i>';
                icon.className = 'input-icon success';
                helper.className = 'helper-text success show';
                helper.textContent = 'Email looks perfect!';
                validEmail = true;
            }
            updateButton();
        });

        // PASSWORD VALIDATION
        passwordInput.addEventListener('focus', function () {
            document.getElementById('passwordTips').classList.add('show');
            document.getElementById('strengthBar').classList.add('show');
        });

        passwordInput.addEventListener('input', function () {
            const value = this.value;
            const hasLength = value.length >= 8;
            const hasLetter = /[A-Za-z]/.test(value);
            const hasNumber = /\d/.test(value);

            updateTip('tip1', hasLength);
            updateTip('tip2', hasLetter);
            updateTip('tip3', hasNumber);

            const strengthFill = document.getElementById('strengthFill');
            let strength = 0;
            if (hasLength) strength++;
            if (hasLetter) strength++;
            if (hasNumber) strength++;

            strengthFill.className = 'strength-bar';
            if (strength === 1) strengthFill.className += ' strength-weak';
            else if (strength === 2) strengthFill.className += ' strength-medium';
            else if (strength === 3) strengthFill.className += ' strength-strong';

            if (hasLength && hasLetter && hasNumber) {
                this.className = 'valid';
                validPassword = true;
            } else if (value.length > 0) {
                this.className = 'invalid';
                validPassword = false;
            } else {
                this.className = '';
                validPassword = false;
            }

            if (confirmInput.value) {
                confirmInput.dispatchEvent(new Event('input'));
            }

            updateButton();
        });

        // CONFIRM PASSWORD
        confirmInput.addEventListener('input', function () {
            const value = this.value;
            const password = passwordInput.value;
            const helper = document.getElementById('confirmHelper');

            if (value.length === 0) {
                this.className = '';
                helper.className = 'helper-text';
                validConfirm = false;
            } else if (value !== password) {
                this.className = 'invalid';
                helper.className = 'helper-text error show';
                helper.textContent = 'Passwords do not match';
                validConfirm = false;
            } else {
                this.className = 'valid';
                helper.className = 'helper-text success show';
                helper.textContent = 'Passwords match!';
                validConfirm = true;
            }
            updateButton();
        });

        function updateTip(id, met) {
            const tip = document.getElementById(id);
            if (met) {
                tip.classList.add('met');
                tip.querySelector('i').className = 'fas fa-check-circle';
            } else {
                tip.classList.remove('met');
                tip.querySelector('i').className = 'far fa-circle';
            }
        }

        function updateButton() {
            submitBtn.disabled = !(validName && validEmail && validPassword && validConfirm);
        }

        function togglePassword(id) {
            const input = document.getElementById(id);
            const icon = input.nextElementSibling.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'far fa-eye';
            }
        }

        // FORM SUBMISSION
        form.addEventListener('submit', function (e) {
            if (!validName || !validEmail || !validPassword || !validConfirm) {
                e.preventDefault();
                return;
            }

            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
        });

        // SHOW SERVER ERROR IF EXISTS (safe-encoded)
        const serverError = '@errorMsgJs';
        if (serverError) {
            const errorBanner = document.getElementById('errorBanner');
            errorBanner.textContent = serverError;
            errorBanner.classList.add('show');
            submitBtn.classList.remove('loading');
        }
    </script>
</body>
</html>
