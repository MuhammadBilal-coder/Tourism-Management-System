@{
    ViewData["Title"] = "Welcome";
}

<! DOCTYPE html>
<html>
<head>
    <title>Welcome! </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare. com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .success-container {
            background: white;
            padding: 60px 40px;
            border-radius:  20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            text-align: center;
            max-width: 500px;
            animation: slideUp 0.5s ease;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform:  translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .success-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #42b72a, #34a853);
            border-radius:  50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            animation: scaleIn 0.6s ease;
        }

        @@keyframes scaleIn {
            from {
                transform: scale(0) rotate(-180deg);
            }
            to {
                transform: scale(1) rotate(0);
            }
        }

        .success-icon i {
            font-size: 50px;
            color: white;
        }

        h1 {
            font-size: 32px;
            color: #1c1e21;
            margin-bottom: 15px;
        }

        . username {
            font-size: 24px;
            color: #667eea;
            font-weight: 700;
            margin-bottom: 20px;
        }

        p {
            font-size: 16px;
            color: #65676b;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .progress-bar {
            width: 100%;
            height:  6px;
            background: #e4e6eb;
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .progress-fill {
            height: 100%;
            width: 0%;
            background:  linear-gradient(90deg, #667eea, #764ba2);
            animation: progress 3s ease forwards;
        }

        @@keyframes progress {
            to { width: 100%; }
        }

        .countdown {
            font-size: 18px;
            color: #667eea;
            font-weight: 600;
        }

        .btn {
            display: inline-block;
            padding: 14px 35px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            text-decoration: none;
            border-radius: 10px;
            font-weight:  600;
            transition: all 0.3s;
            margin-top: 20px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102,126,234,0.4);
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>
        <h1>Welcome Aboard!</h1>
        <div class="username">@ViewBag.UserName</div>
        <p>Your account has been created successfully. Get ready to explore amazing destinations!</p>
        <div class="progress-bar">
            <div class="progress-fill"></div>
        </div>
        <div class="countdown">Redirecting in <span id="counter">3</span> seconds...</div>
        <a href="/Destinations/Index" class="btn">Continue to Home</a>
    </div>

    <script>
        let count = 3;
        const counter = document.getElementById('counter');
        
        const interval = setInterval(() => {
            count--;
            counter.textContent = count;
            
            if (count === 0) {
                clearInterval(interval);
                window.location.href = '/Destinations/Index';
            }
        }, 1000);
    </script>
</body>
</html>