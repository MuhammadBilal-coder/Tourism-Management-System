@model TourismManagementSystem.Models.ViewModels.BookPackageVM
@{
    ViewData["Title"] = "Book Package";
}

@* ✅ SHOW ERROR MESSAGE *@
@if (TempData["Error"] != null)
{
    <div style="position: fixed; top: 20px; right: 20px; z-index: 9999; background: #dc3545; color: white; padding: 20px 30px; border-radius: 15px; box-shadow: 0 10px 30px rgba(220,53,69,0.5); max-width: 400px; animation: slideIn 0.5s;">
        <strong>⚠️ Error:</strong><br />
        @TempData["Error"]
    </div>

    <style>
        @@keyframes slideIn {
            from { transform: translateX(400px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
    </style>
}

<!DOCTYPE html>
<html>
<head>
    <title>Book a Package - @Model.DestinationName</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 20px;
        }

        .page-header { text-align: center; color: white; margin-bottom: 50px; }
        .page-header h1 { font-size: 42px; margin-bottom: 10px; text-shadow: 2px 2px 4px rgba(0,0,0,0.3); }
        .page-header p { font-size: 20px; opacity: 0.9; }

        .packages-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .package-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            transition: transform 0.3s, box-shadow 0.3s;
            border: 3px solid #e0e0e0;
        }

        .package-card:hover { transform: translateY(-10px); box-shadow: 0 15px 40px rgba(0,0,0,0.3); }

        .package-header {
            text-align: center;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .package-type { font-size: 26px; font-weight: bold; color: #333; margin-bottom: 15px; }
        .package-price { font-size: 32px; color: #667eea; font-weight: bold; }
        .package-price span { font-size: 18px; color: #999; }

        .package-details { margin-bottom: 25px; }

        .detail-row {
            margin-bottom: 15px;
            padding: 12px;
            background: #f9f9f9;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }

        .detail-label { font-weight: bold; color: #555; font-size: 14px; display: block; margin-bottom: 5px; }
        .detail-value { color: #333; font-size: 16px; line-height: 1.6; }

        .book-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(40,167,69,0.3);
            text-decoration: none;
            display: block;
            text-align: center;
        }

        .book-btn:hover { transform: translateY(-3px); box-shadow: 0 8px 25px rgba(40,167,69,0.5); }

        .custom-section {
            max-width: 1200px;
            margin: 50px auto;
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .custom-section h2 { text-align: center; color: #333; margin-bottom: 30px; font-size: 32px; }

        .form-group { margin-bottom: 25px; }
        .form-label { display: block; font-weight: bold; color: #555; font-size: 18px; margin-bottom: 10px; }

        .form-select {
            width: 100%;
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 10px;
            font-size: 16px;
            background: #f9f9f9;
            transition: border-color 0.3s;
        }

        .form-select:focus { outline: none; border-color: #667eea; background: white; }

        .submit-btn {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 50px;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 20px rgba(102,126,234,0.4);
            margin-top: 20px;
        }

        .submit-btn:hover { transform: translateY(-3px); box-shadow: 0 8px 30px rgba(102,126,234,0.6); }

        .no-packages { text-align: center; color: white; font-size: 24px; padding: 50px; }
    </style>
</head>
<body>
    <div class="page-header">
        <h1>📦 Select Your Package</h1>
        <p>Destination: @Model.DestinationName</p>
    </div>

    @if (Model.Packages != null && Model.Packages.Count > 0)
    {
        <div class="packages-container">
            @foreach (var package in Model.Packages)
            {
                <div class="package-card">
                    <div class="package-header">
                        <div class="package-type">@package.Type</div>
                        <div class="package-price">
                            ₨@(package.Price.ToString("N2")) <span>/ package</span>
                        </div>
                    </div>

                    <div class="package-details">
                        <div class="detail-row">
                            <span class="detail-label">🏨 Hotel:</span>
                            <span class="detail-value">@(package.HotelOptions ?? "N/A")</span>
                        </div>

                        <div class="detail-row">
                            <span class="detail-label">🚗 Transport:</span>
                            <span class="detail-value">@(package.TransportOptions ?? "N/A")</span>
                        </div>

                        <div class="detail-row">
                            <span class="detail-label">🎯 Activities:</span>
                            <span class="detail-value">@(package.Activities ?? "N/A")</span>
                        </div>
                    </div>

                    <a asp-controller="Packages"
                       asp-action="BookNow"
                       asp-route-packageId="@package.PackageId"
                       class="book-btn">
                        Book Now
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-packages">
            <p>No pre-defined packages available for this destination.</p>
        </div>
    }

    <!-- CUSTOM PACKAGE OPTION -->
    <div class="custom-section">
        <h2>🎨 Or Create Custom Package</h2>

        <form method="post" asp-controller="Packages" asp-action="BookCustom">
            <input type="hidden" name="DestinationId" value="@Model.DestinationId" />

            <div class="form-group">
                <label class="form-label">🏨 Select Hotel:</label>
                <select name="SelectedHotelId" class="form-select" required>
                    <option value="">-- Choose Hotel --</option>
                    @foreach (var hotel in Model.Hotels)
                    {
                        <option value="@hotel.HotelId">
                            @hotel.HotelName - @hotel.RoomType
                            (₨@(hotel.PricePerNight.ToString("N2")) per night, Available: @hotel.Availability)
                        </option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">🚗 Select Transport:</label>
                <select name="SelectedTransportId" class="form-select" required>
                    <option value="">-- Choose Transport --</option>
                    @foreach (var transport in Model.Transports)
                    {
                        <option value="@transport.TransportId">
                            @transport.TransportType (Capacity: @transport.Capacity, ₨@(transport.RatePerDay.ToString("N2")) per day)
                        </option>
                    }
                </select>
            </div>

            <button type="submit" class="submit-btn">🎯 Book Custom Package</button>
        </form>
    </div>
</body>
</html>
