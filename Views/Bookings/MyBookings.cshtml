@model List<TourismManagementSystem.Models.ViewModels.MyBookingsVM>
@{
    ViewData["Title"] = "My Bookings";
}

<!DOCTYPE html>
<html>
<head>
    <title>My Bookings</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 20px;
        }

        .container { max-width: 1200px; margin: 0 auto; }

        .page-header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            text-align: center;
        }

        .page-header h1 { font-size: 36px; color: #333; margin-bottom: 10px; }
        .page-header p { color: #666; font-size: 16px; }

        .alert {
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            animation: slideIn 0.5s;
        }

        .alert-success { background: #d4edda; color: #155724; border-left: 5px solid #28a745; }
        .alert-error { background: #f8d7da; color: #721c24; border-left: 5px solid #dc3545; }

        @@keyframes slideIn {
            from { transform: translateY(-20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .bookings-grid { display: grid; gap: 25px; }

        .booking-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .booking-card:hover { transform: translateY(-5px); box-shadow: 0 10px 40px rgba(0,0,0,0.25); }

        .booking-card.cancelled { opacity: 0.7; background: #f8f9fa; }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 3px solid #e0e0e0;
        }

        .booking-id { font-size: 28px; font-weight: bold; color: #667eea; }

        .status-badge {
            padding: 10px 25px;
            border-radius: 50px;
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .status-confirmed { background: #d4edda; color: #155724; }
        .status-cancelled { background: #f8d7da; color: #721c24; }

        .booking-details { margin-bottom: 25px; }

        .detail-item {
            display: grid;
            grid-template-columns: 200px 1fr;
            padding: 14px 0;
            border-bottom: 1px solid #e9ecef;
            align-items: center;
        }

        .detail-item:last-child { border-bottom: none; }

        .detail-label { font-weight: 700; color: #495057; font-size: 15px; }
        .detail-value { color: #212529; font-size: 15px; font-weight: 500; }

        .section-title {
            font-size: 20px;
            font-weight: bold;
            color: #667eea;
            margin: 30px 0 20px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .payment-section {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 12px;
            margin-top: 25px;
        }

        .payment-section .detail-item { border-bottom: 1px solid #dee2e6; }

        .amount-value { color: #28a745 !important; font-weight: bold !important; font-size: 20px !important; }

        .action-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 25px;
        }

        .btn {
            padding: 15px;
            border: none;
            border-radius: 50px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: block;
            text-align: center;
        }

        .btn-view {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 5px 15px rgba(102,126,234,0.4);
        }

        .btn-view:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(102,126,234,0.6); }

        .btn-cancel {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            box-shadow: 0 5px 15px rgba(220,53,69,0.4);
        }

        .btn-cancel:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(220,53,69,0.6); }

        .btn-cancel:disabled { background: #6c757d; cursor: not-allowed; opacity: 0.6; }

        .empty-state {
            background: white;
            padding: 60px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .empty-icon { font-size: 80px; margin-bottom: 20px; }

        .empty-state h2 { font-size: 28px; color: #333; margin-bottom: 10px; }
        .empty-state p { color: #666; font-size: 16px; margin-bottom: 30px; }

        .btn-primary {
            display: inline-block;
            padding: 15px 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: bold;
            transition: all 0.3s;
            box-shadow: 0 5px 20px rgba(102,126,234,0.4);
        }

        .btn-primary:hover { transform: translateY(-3px); box-shadow: 0 8px 30px rgba(102,126,234,0.6); }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: white;
            text-decoration: none;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .back-link:hover { transform: translateX(-5px); }

        @@media (max-width: 768px) {
            .booking-header { flex-direction: column; gap: 15px; text-align: center; }
            .detail-item { grid-template-columns: 1fr; gap: 5px; }
            .action-buttons { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Destinations/Index" class="back-link">← Back to Home</a>

        <div class="page-header">
            <h1>📋 My Bookings</h1>
            <p>View and manage all your travel bookings</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">✅ @TempData["Success"]</div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">⚠️ @TempData["Error"]</div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="bookings-grid">
                @foreach (var booking in Model)
                {
                    <div class="booking-card @(booking.Status == "Cancelled" ? "cancelled" : "")">

                        <div class="booking-header">
                            <div class="booking-id">Booking #@booking.BookingId</div>
                            <div class="status-badge @(booking.Status == "Confirmed" ? "status-confirmed" : "status-cancelled")">
                                @booking.Status
                            </div>
                        </div>

                        <div class="section-title">📦 Package Details</div>
                        <div class="booking-details">
                            <div class="detail-item">
                                <span class="detail-label">Package Type:</span>
                                <span class="detail-value">@booking.PackageType</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Destination:</span>
                                <span class="detail-value">@booking.DestinationName</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Hotel:</span>
                                <span class="detail-value">@booking.HotelName - @booking.RoomType</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Transport:</span>
                                <span class="detail-value">@booking.TransportType (Capacity: @booking.TransportCapacity)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Booking Date:</span>
                                <span class="detail-value">@booking.BookingDate.ToString("dd MMM yyyy, hh:mm tt")</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Booked By:</span>
                                <span class="detail-value">@booking.UserName</span>
                            </div>
                        </div>

                        <div class="payment-section">
                            <div class="section-title">💳 Payment Information</div>
                            <div class="booking-details">
                                <div class="detail-item">
                                    <span class="detail-label">Amount:</span>
                                    <span class="detail-value amount-value">₨@(booking.Amount.ToString("N2"))</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Payment Method:</span>
                                    <span class="detail-value">@booking.PaymentMethod</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Payment Status:</span>
                                    <span class="detail-value">@booking.PaymentStatus</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Transaction ID:</span>
                                    <span class="detail-value">@booking.TransactionId</span>
                                </div>
                            </div>
                        </div>

                        <div class="action-buttons">
                            <a href="@Url.Action("PaymentSuccess", "Payment", new { bookingId = booking.BookingId })"
                               class="btn btn-view">
                                👁️ View Details
                            </a>

                            @if (booking.CanCancel)
                            {
                                <form asp-controller="Bookings"
                                      asp-action="CancelBooking"
                                      method="post"
                                      style="margin: 0;"
                                      onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                    <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                    <button type="submit" class="btn btn-cancel">❌ Cancel Booking</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-cancel" disabled>Already Cancelled</button>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">📭</div>
                <h2>No Bookings Yet</h2>
                <p>You haven't made any bookings yet. Start exploring destinations!</p>
                <a href="/Destinations/Index" class="btn-primary">🌍 Browse Destinations</a>
            </div>
        }
    </div>
</body>
</html>
